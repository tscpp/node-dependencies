{
	"name": "node-dependencies",
	"displayName": "Node Dependencies",
	"description": "Tree view of all node dependencies in workspace",
	"version": "0.0.3",
	"publisher": "tscpp",
	"icon": "icon.png",
	"engines": {
		"vscode": "^1.46.0"
	},
	"categories": [],
	"activationEvents": [
		"onView:nodeDependencies"
	],
	"main": "./out/extension.js",
	"contributes": {
		"viewsWelcome": [
			{
				"view": "nodeDependencies",
				"contents": "No dependencies found, [learn more](https://www.npmjs.com/about).\n[Add Dependency](command:nodeDependencies.addDependency)"
			}
		],
		"views": {
			"explorer": [
				{
					"id": "nodeDependencies",
					"name": "Node Dependencies"
				}
			]
		},
		"commands": [
			{
				"command": "nodeDependencies.refreshDependency",
				"title": "Refresh",
				"icon": "$(refresh)"
			},
			{
				"command": "nodeDependencies.init",
				"title": "Initialize Project"
			},
			{
				"command": "nodeDependencies.addDependency",
				"title": "Add",
				"icon": "$(add)"
			},
			{
				"command": "nodeDependencies.addDevDependency",
				"title": "Add Dev Dependency"
			},
			{
				"command": "nodeDependencies.editDependency",
				"title": "Edit"
			},
			{
				"command": "nodeDependencies.deleteDependency",
				"title": "Delete",
				"icon": "$(close)"
			},
			{
				"command": "nodeDependencies.npmopen",
				"title": "Open in NPM",
				"icon": "$(link)"
			},
			{
				"command": "nodeDependencies.updateDependency",
				"title": "Update"
			}
		],
		"menus": {
			"view/title": [
				{
					"command": "nodeDependencies.refreshDependency",
					"when": "view == nodeDependencies",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.addDependency",
					"when": "view == nodeDependencies",
					"group": "navigation"
				},
				{
					"command": "nodeDependencies.addDevDependency",
					"when": "view == nodeDependencies"
				}
			],
			"view/item/context": [
				{
					"command": "nodeDependencies.deleteDependency",
					"group": "dep@3"
				},
				{
					"command": "nodeDependencies.editDependency",
					"group": "dep@2"
				},
				{
					"command": "nodeDependencies.deleteDependency",
					"group": "inline@2"
				},
				{
					"command": "nodeDependencies.npmopen",
					"group": "inline@1"
				},
				{
					"command": "nodeDependencies.updateDependency",
					"group": "dep@1"
				}
			],
			"commandPalette": [
				{
					"command": "nodeDependencies.refreshDependency",
					"when": "false"
				},
				{
					"command": "nodeDependencies.init",
					"when": "false"
				},
				{
					"command": "nodeDependencies.addDependency",
					"when": "false"
				},
				{
					"command": "nodeDependencies.addDevDependency",
					"when": "false"
				},
				{
					"command": "nodeDependencies.editDependency",
					"when": "false"
				},
				{
					"command": "nodeDependencies.deleteDependency",
					"when": "false"
				},
				{
					"command": "nodeDependencies.npmopen",
					"when": "false"
				},
				{
					"command": "nodeDependencies.updateDependency",
					"when": "false"
				}
			]
		}
	},
	"scripts": {
		"vscode:prepublish": "npm run compile",
		"compile": "tsc -p ./",
		"watch": "tsc -watch -p ./",
		"lint": "eslint . --ext .ts,.tsx"
	},
	"devDependencies": {
		"@types/node": "^12.12.0",
		"@types/vscode": "^1.45.0",
		"@typescript-eslint/eslint-plugin": "^3.0.2",
		"@typescript-eslint/parser": "^3.0.2",
		"eslint": "^7.1.0",
		"typescript": "^3.9.4"
	},
	"dependencies": {},
	"repository": {
		"url": "https://github.com/tscpp/node-dependencies",
		"type": "https"
	}
}
